<UserControl x:ConnectionId='1'
    x:Class="Orbit.Controls.TimelineStory"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Orbit.Controls"
    xmlns:composition="using:Orbit.Helpers.Composition"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="750"
    RequestedTheme="Dark">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="130"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid x:ConnectionId='2' 
            Name="ImageContainer" 
            Height="110" 
            Width="110" 
            Grid.Column="1" 
            VerticalAlignment="Center" 
            HorizontalAlignment="Center">
            <Ellipse 
                StrokeThickness="1" 
                Stroke="#97FFFFFF"
                Height="110" 
                Width="110"/>
            <composition:CompositionShadow x:ConnectionId='9' 
                x:Name="Shadow" 
                Color="Black" 
                OffsetX="0" 
                OffsetY="0" 
                ShadowOpacity="0.5" 
                BlurRadius="30">
                <composition:CompositionImage x:ConnectionId='10'
                    x:Name="Image"
                                                 
                    Height="90" 
                    Width="90" 
                    Stretch="UniformToFill"/>
            </composition:CompositionShadow>
        </Grid>
        <Grid x:ConnectionId='3' 
            Margin="20,0,0,0" 
            Name="Content" 
            Grid.Column="2" 
            VerticalAlignment="Center">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Border x:ConnectionId='4' 
                    Name="TopLine"
                    BorderBrush="#19FFFFFF"
                    BorderThickness="0,1,0,0"
                    Margin="0,10,0,5"/>
                <TextBlock x:ConnectionId='5' 
                    Name="TitleLine"
                    FontSize="20" 
                    FontWeight="Light"
                    Grid.Row="1"                           
                    FontFamily="Segoe UI" 
                    Foreground="#CCFFFFFF" 
                    TextTrimming="CharacterEllipsis"/>
                <TextBlock x:ConnectionId='6'
                    Name="SummaryContainer"
                    FontSize="12"
                    FontWeight="Light"
                    Margin="0,10"
                    Grid.Row="2"
                    MaxLines="2" 
                    TextWrapping="WrapWholeWords" 
                    TextTrimming="WordEllipsis"
                                                     
                    Foreground="#99FFFFFF"/>
                <StackPanel x:ConnectionId='7' 
                    Name="SunContainer"
                    Grid.Row="3" 
                    Orientation="Horizontal">
                    <Image 
                        Source="ms-appx:///Assets/Icons/Sun.png"
                        Width="36"/>
                    <TextBlock x:ConnectionId='8' 
                        FontSize="12" 
                        VerticalAlignment="Center"
                                                        />
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</UserControl>

