<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Orbit.Controls">

    <Style TargetType="controls:Timeline">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:Timeline">
                    <Grid>
                        <controls:TimelinePanel 
                            x:Name="TPanel" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="controls:TimelineItem">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:TimelineItem">
                    <ContentPresenter />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="controls:FocusableItem">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="controls:FocusableItem">
                    <ContentPresenter />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>
